{
 "name": "root",
 "private": true,
 "workspaces": [
  "packages/*",
  "playground/*"
 ],
 "scripts": {
  "clean": "lerna clean -y",
  "watch": "lerna run watch --stream",
  "build": "npm run build:stencil && npm run build:vue && npm run build:react",
  "build:stencil": "lerna run build --scope @stencil-test/stencil",
  "build:vue": "lerna run build --scope @stencil-test/vue",
  "build:react": "lerna run build --scope @stencil-test/react",
  "build:rest": "lerna run build --ignore @stencil-test/stencil --concurrency=2",
  "dev": "lerna run dev:start --stream"
 },
 "devDependencies": {
  "@types/node": "^24.9.1",
  "lerna": "^9.0.0",
  "typescript": "^5.9.3"
 }
}
